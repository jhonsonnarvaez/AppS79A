<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppS79A.Elemento">
    <ContentPage.Content>
        <ScrollView>
        <StackLayout Spacing="10" Padding="10">
                <Label x:Name="mensaje"/>
                <Label Text="Nombre: "/>
                <Entry x:Name="Nombre" Placeholder="Nombre"/>
                <Label Text="Usuario: "/>
                <Entry x:Name="Usuario" Placeholder="Usuario"/>
                <Label Text="Contraseña: "/>
                <Entry x:Name="Contrasenia" Placeholder="Contraseña"/>
                <Button x:Name="btnActualizar" Text="Actualizar" Clicked="btnActualizar_Clicked" BackgroundColor="LawnGreen"/>
                <Button x:Name="btnEliminar" Text="Eliminar" Clicked="btnEliminar_Clicked" BackgroundColor="Red"/>
            </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>